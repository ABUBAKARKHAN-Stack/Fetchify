{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "CommonJS", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/types"
  ] 
}